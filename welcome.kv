<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 25/255, 25/255, 25/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Cabeçalho com logo e nome do app
        BoxLayout:
            size_hint_y: None
            height: 150
            padding: 5
            spacing: 10


            Label:
                text: 'Olá Amigo Bom de Bola'
                font_size: '28sp'
                bold: True
                color: 1,1,1,1
                halign: 'left'
                valign: 'middle'
                text_size: self.size

        # Saudação dinâmica
        Label:
            id: welcome_label
            text: 'Carregando...'
            markup: True
            font_size: '26sp'
            bold: True
            color: 1,1,1,1
            size_hint_y: None
            height: 50
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            on_kv_post:
                root.update_welcome(self)

        # Botões principais com ícones
        GridLayout:
            cols: 2
            spacing: 20
            size_hint_y: None
            height: 200

            # Botão Treinos
            Button:
                background_normal: ''
                background_color: 0,0,0,0
                on_press: root.manager.current = 'treino'
                canvas.before:
                    Color:
                        rgba: 45/255,45/255,45/255,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10
                    size: self.parent.size
                    pos: self.parent.pos

                    AsyncImage:
                        source: "C:/Users/Pichau/Desktop/Pi_4_Projeto_Bom_de_Bola/images/registrar - Copia.png"
                        size_hint: 0.6, 0.6
                        pos_hint: {"center_x": 0.5}

                    Label:
                        text: 'Treinos'
                        font_size: 16
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 20
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size

            # Botão Agenda
            Button:
                background_normal: ''
                background_color: 0,0,0,0
                on_press: root.manager.current = 'schedule'
                canvas.before:
                    Color:
                        rgba: 45/255,45/255,45/255,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10
                    size: self.parent.size
                    pos: self.parent.pos

                    AsyncImage:
                        source: "C:/Users/Pichau/Desktop/Pi_4_Projeto_Bom_de_Bola/images/agenda - Copia.png"
                        size_hint: 0.6, 0.6
                        pos_hint: {"center_x": 0.5}

                    Label:
                        text: 'Agenda'
                        font_size: 16
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 20
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size

        # Botão de Sair / Voltar ao Login
        Button:
            text: 'Sair (Voltar ao Login)'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_press: root.manager.current = 'login'
            canvas.before:
                Color:
                    rgba: 0.5,0.5,0.5,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
