<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: 'Bem-vindo ao Bom de Bola!'
            font_size: 26
            bold: True
            color: 1,1,1,1

        Button:
            text: 'Ir para Treinos'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_press: root.manager.current = 'treino'
            canvas.before:
                Color:
                    rgba: 0.9,0.35,0.35,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]

        Button:
            text: 'Ir para Agenda'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_press: root.manager.current = 'schedule'
            canvas.before:
                Color:
                    rgba: 0.9,0.35,0.35,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]

        Button:
            text: 'Sair (Voltar ao Login)'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_press: root.manager.current = 'login'
            canvas.before:
                Color:
                    rgba: 0.5,0.5,0.5,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
