<ScheduleScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: 'Agenda de Treinos'
            font_size: 24
            color: 1,1,1,1

        GridLayout:
            id: agenda_grid
            cols: 5
            size_hint_y: None
            height: self.minimum_height

        Button:
            text: 'Voltar ao Menu'
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_press: root.manager.current = 'welcome'
            canvas.before:
                Color:
                    rgba: 0.9,0.35,0.35,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [25]
